{% extends 'base.html.twig' %}

{% block title %}Authentification
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/authentification.css') }}">
{% endblock %}

{% block body %}
	<div class="container">

		<div class="forms-container">
			<div class="signin-signup">
				<form action="{{ path('login') }}" method="post" class="sign-in-form">
					<h2 class="title">Connexion</h2>
					<div class="input-field">
						<i class="fas fa-user"></i>
						<input name="_username" required type="text" placeholder="Username" value="{{lastUsername}}"/>
					</div>
					<div class="input-field">
						<i class="fas fa-lock"></i>
						<input name="_password" required type="password" placeholder="Password"/>
					</div>
					{# <input type="submit" value="Se connecter" class="btn solid"/> #}
					<button class="btn solid" type="submit">Se connecter</button>
				</form>
				{{ form_start(formSignup, {'attr': {'class': 'sign-up-form'}})}}
				<h2 class="title">Inscription</h2>
				<div class="input-field">
					<i class="fas fa-user"></i>
					{% if form_errors(formSignup.surname) %}
						{{ form_errors(formSignup.surname) }}
					{% endif %}
					{{ form_widget(formSignup.surname) }}
				</div>
				<div class="input-field">
					<i class="fas fa-user"></i>
					{% if form_errors(formSignup.name) %}
						{{ form_errors(formSignup.name) }}
					{% endif %}
					{{ form_widget(formSignup.name) }}
				</div>
				<div class="input-field">
					<i class="fas fa-envelope"></i>
					{% if form_errors(formSignup.email) %}
						{{ form_errors(formSignup.email) }}
					{% endif %}
					{{ form_widget(formSignup.email) }}
				</div>
				<div class="input-field">
					<i class="fas fa-lock"></i>
					{% if form_errors(formSignup.password.first) %}
						{{ form_errors(formSignup.password.first) }}
					{% endif %}
					{{ form_widget(formSignup.password.first) }}
				</div>
				<div class="input-field">
					<i class="fas fa-lock"></i>
					{{ form_widget(formSignup.password.second) }}
				</div>
				<div class="input-field">
					<i class="fas fa-birthday-cake"></i>
					<input type="date" name="age" value="2000-01-01" min="1920-01-01" max="2010-01-01"/>
				</div>
				<div class="input-field">
					<i class="fas fa-weight"></i>
					<input type="number" name="weight" placeholder="poids en kg"/>
				</div>
				<input type="submit" class="btn" value="S'inscrire"/>
				{{ form_end(formSignup) }}
			</div>
		</div>

		<div class="panels-container">
			<div class="panel left-panel">
				<div class="content">
					<h3>Tu es nouveau ?</h3>
					<p>
						Tu veux avoir un plan d'entrainement avec tout un suivi pour un meilleur entrainement ?
																		              Inscris toi !
					</p>
					<button class="btn transparent" id="sign-up-btn">
						Inscription
					</button>
				</div>
				<img src="{{ asset('assets/img/vtt.svg') }}" class="image" alt=""/>
			</div>
			<div class="panel right-panel">
				<div class="content">
					<h3>Déjà inscris ?</h3>
					<p>
						Tu es déjà inscris ? Va te connecter pour visualiser ton plan d'entrainement !
					</p>
					<button class="btn transparent" id="sign-in-btn">
						Connexion
					</button>
				</div>
				<img src="{{ asset('assets/img/bureau.svg') }}" class="image" alt=""/>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('assets/js/authentification.js') }}"></script>
{% endblock %}
